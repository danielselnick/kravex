{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "args": ["--workspace"],
      "problemMatcher": ["$rustc"],
      "group": { "kind": "build", "isDefault": true },
      "label": "cargo build --workspace"
    },
    {
      "type": "cargo",
      "command": "check",
      "args": ["--workspace"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "cargo check --workspace"
    },
    {
      "type": "cargo",
      "command": "test",
      "args": ["--workspace"],
      "problemMatcher": ["$rustc"],
      "group": "test",
      "label": "cargo test --workspace"
    },
    {
      "type": "cargo",
      "command": "clippy",
      "args": ["--workspace"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "cargo clippy --workspace"
    },
    {
      "type": "cargo",
      "command": "build",
      "args": ["-p", "kvx-cli"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "cargo build -p kvx-cli"
    }
  ]
}
